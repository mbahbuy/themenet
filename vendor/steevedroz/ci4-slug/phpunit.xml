<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="vendor/autoload.php" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd" colors="true">
  <coverage>
    <include>
      <directory suffix=".php">lib</directory>
    </include>
    <report>
      <html outputDirectory="./build/html"/>
      <text outputFile="php://stdout" showUncoveredFiles="true"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="unit">
      <directory>./tests/mocks</directory>
      <directory>./tests/unit</directory>
    </testsuite>
  </testsuites>
  <logging/>
</phpunit>
